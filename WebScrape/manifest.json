{
    "manifest_version": 3,
    "name": "Web Scraper",
    "version": "1.0",
    "permissions": ["activeTab", "scripting"],
    "background": {
        "scripts": ["config.js", "background.js"],
        "persistent": false
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "My Extension"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js", "config.js"]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ]
  }